    <span class="alert alert-light" role="alert">
  
</span>


<center>
<div id="yoo" class="alert alert-warning" style="width: 400px;" role="alert">
  <h5> <%=loginError%> </h5>
</div>
</center>


<center>
<div id="yo" class="alert alert-warning" style="width: 400px;" role="alert">
  <h5> <%=wrongMatric%> </h5>
</div>
</center>

<div class="wrapper fadeInDown">
  <div id="formContent">

    <div class="fadeIn first">
      <img src="/public/images/lasu.jpg" id="icon" alt="User Icon" />
      <h1>Lasu Clearance</h1>
    </div>

    <!-- Login Form -->
    <form action="/login/student" method="POST">
      <input type="text" id="login" class="fadeIn second" name="username" placeholder="Surname">
      <input type="password" id="password" class="fadeIn third" name="password" placeholder="Matric No">
      <input type="submit" class="fadeIn fourth" value="Log In">
    </form>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <p>Lasu Clearance System</p>
    </div>

  </div>
</div>


