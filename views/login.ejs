<script src="plugins/jQuery/bootstrap.min.js"></script>




    <script type="text/javascript">    
        
        if($.trim($('#yo').text()).length === 0) {
            $('#yo').css("display", "none")
        }else{
            $('#yo').css("display", "block")
          
        }



        if($.trim($('#yoo').text()).length === 0) {
            $('#yoo').css("display", "none")
        }else{
            $('#yoo').css("display", "block")
          
        }

        </script>

