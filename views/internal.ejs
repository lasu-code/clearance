       <td>          <button type="button" data-toggle="modal" class="btn btn-info btn-sm" class="details"
                                        data-target="#myModal<%=[i]%>">show
                                        details</button>



                                         <!-- Modal -->
        <!-- Trigger the modal with a button -->
                                             
        <div id="myModal<%=[i]%>" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">
                           STUDENT DETAILS</h4>

                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <div class="modal-body">
                        <!-- document -->
                        <div class="container-fluid">

                            <ul class="list-group">
                                <li class="list-group-item"> 
                 
                                <img src="http://studentservices.lasu.edu.ng/returningstudents/images/stud_image/<%= result[i].matricNo %>.jpg" 
                                        class="img-circle"  width="100px" height="100px" alt="profile" srcset="">
   

              </li>
                                <li class="list-group-item"> <%= result[i].userFullName %>
                                    </li>
                                <li class="list-group-item"> <%= result[i].matricNo %>
                                    
                                </li>

                            </ul>



                            <h3>Transaction Receipt</h3>
                            
                            <!-- transaction slip -->
                            <div class="transaction slip">
                                <img src="<%= result[i].bursaryUnit.document %>"
                            
                                width="200px" height="200px" alt="profile" srcset="">
                            </div>
                            <br> <br>
                            

                            
                            <div class="form-group">
                                <form action="">
