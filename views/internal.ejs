                                    <textarea class="form-control" rows="5" id="comment"></textarea>
                                    <br>
                                    <button class="btn btn-primary" type="submit">post</button>
                                </form>
                            </div>
                                     
                            <div class="btn-group">
                                <form action="/internalClear?_method=PUT" method="POST" > 
                                <input type="hidden" name="resultId" value=<%= result[i]._id %>>
                                    <button type="submit" class="btn btn-success">CLEAR</button>
                                </div>
                                </form> 

                                
                                <div class="btn-group">
                                    <form action="/internalReject?_method=PUT" method="POST">
                                        <input type="hidden" name="studentId" value=<%= result[i]._id %>>
                                    <button type="submit" class="btn btn-danger">REJECT</button>
                                </div>
                                </form>


                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
