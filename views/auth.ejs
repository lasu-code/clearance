                    </div>

                    <h1 id="welName"></h1>
                    <hr>
                    <div id="forget">
                        <!-- <a href=""> <span class="forget" id="create" >Create Account?</span></a> -->
                        <a href=""> <span class="forget" id="recover"> Forget password?</span></a>
                    </div>




                </form>

            </div>

            <div id="studentLogin" class="tabcontent">
                <form action="/studentDashboard" method="POST">
                    <h3 class="diffs">Student Login</h3>
                    <div id="firstField">
                        <label for="Username">Matric Number
                            <br>
                            <input type="text" name="Username" id="Username" required>
                        </label>
                        <br>
                        <label for="Password">Surname
                            <br>
                            <input type="password" name="password" required>
                        </label>
                        <br> <br>
                        <!-- <input id="Username" class="playbtn" type="button" onclick="playGame()" value='Play Game' /> -->
                        <input type="submit" class="submit" value="log in">
                    </div>

                    <h1 id="welName"></h1>
                    <hr>



                </form>

            </div>
        </div>






    </main>

</body>

</html>