    <main>

        <div class="formContainer">
        <ul class="tab">
            <li><a href="#" class="tablinks" onclick="opentab(event, 'studentLogin')">Login as students</a></li>
            <li><a href="#" class="tablinks tablinks2" onclick="opentab(event, 'unitLogin')">Login as Unit</a></li>
        </ul>
       
            <div id="unitLogin" class="tabcontent tabcontent2">
                <form action="" method="POST">
                    <h3 class="diffs">Units Login</h3>
                    <div id="firstField">
                        <label for="Username">E-mail
                            <br>
                            <input type="email" name="Username" id="Username" required>
                        </label>
                        <br>
                        <label for="Password">Password
                            <br>
                            <input type="password" name="password" required>
                        </label>
                        <br> <br>
